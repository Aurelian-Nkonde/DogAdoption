
@model IEnumerable<dogAdoption.Models.AdoptionRequest>;

 <div class="">
        <div class="container mx-auto max-w-6xl px-10 py-20">
              <h1 class="aboutheader pb-6">
                <a asp-action="MainAdmin" asp-controller="Admin">MainAdmin </a>
            </h1>


            <div class="pb-5">
                <h1 class="font-sans my-5 text-4xl bg-red-500 py-4 px-10">Adoption-Menu</h1>
            </div>
            <div class="pb-10">
                <button class="font-sans text-xl bg-green-600 py-3 px-10 text-white">
                    <a asp-action="AdoptionAcceptedRequests" asp-controller="AdoptionAdmin">List_Of_Accepted_Adoptions</a>
                </button>
                <button class="font-sans text-xl bg-red-600 py-3 px-10 text-white">
                    <a asp-action="AdoptionDeclinedRequests" asp-controller="AdoptionAdmin">List_Of_Rejected_Adoptions</a>
                </button>
            </div>

            @if (Model.Count() >= 1)
            {
                
            <h1 class="detailsheader pb-6">List of pending-applications</h1>

            <table class="table tablefont table-fixed w-full text-center ">
                <thead class="bg-black text-white">
                    <tr>
                        <th class="py-2">Id</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Email</th>
                        <th>Option1</th>
                        <th>Option2</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model)
                    {
                    <tr class="border-b-2 text-xl font-serif text-gray-700 border-red-600">
                        <td class="py-4 ">@request.Id</td>
                        <th class="underline">
                            <a asp-action="requestDetail" asp-controller="adoptionAdmin" asp-route-id="@request.Id">@request.FirstName</a>
                        </th>
                        <th>@request.LastName</th>
                        <th>@request.Email</th>
                        <th><button class="bg-green-700 text-white text-xl py-2 px-4">
                            <a asp-action="acceptAdoption" asp-controller=" AdoptionAdmin" asp-route-id="@request.Id">Accept</a>
                        </button></th>
                        <th><button class="bg-red-700 text-white text-xl py-2 px-4">
                            <a asp-action="declineAdoption" asp-controller=" AdoptionAdmin" asp-route-id="@request.Id">Reject</a>
                        </button></th>
                    </tr>
                    }

                </tbody>
            </table>
            } 
            else
            {
                <h1>The pending request lists is empty</h1>
            }

        </div>
    </div>